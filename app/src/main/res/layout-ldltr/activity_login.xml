<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_hight"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_width1"
            android:background="@drawable/head">

            <ImageView
                android:id="@+id/login_back"
                android:layout_width="@dimen/item_layout_hight"
                android:layout_height="@dimen/layout_hight1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_margin"
                android:src="@mipmap/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_layout_hight"
                android:layout_marginBottom="@dimen/layout_marginBottom"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:background="@mipmap/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/layout_margin"
                    android:layout_height="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_marginLeft"
                    android:layout_marginRight="@dimen/layout_marginLeft"
                    android:src="@mipmap/account" />

                <EditText
                    android:id="@+id/login_edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/login_account_edit_hint"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:textSize="@dimen/textForget"
                    android:gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_layout_hight"
                android:layout_marginBottom="@dimen/layout_marginBottom"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_marginBottom"
                android:background="@mipmap/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/layout_margin"
                    android:layout_height="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_marginLeft"
                    android:layout_marginRight="@dimen/layout_marginLeft"
                    android:src="@mipmap/password" />

                <EditText
                    android:id="@+id/login_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/login_password_edit_hint"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textForget"
                    android:singleLine="true" />
            </LinearLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_layout_hight"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin_right"
                android:background="@mipmap/btn_bg1"
                android:text="@string/login"
                android:gravity="center"
                android:textColor="@color/button"
                android:textSize="@dimen/textBtn" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_width1"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_marginTop">

                <CheckBox
                    android:id="@+id/login_check"
                    android:layout_width="@dimen/layout_margin"
                    android:layout_height="@dimen/layout_margin"
                    android:checked="true"
                    android:button="@drawable/checkbox"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/login_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/login_check"
                    android:textSize="@dimen/textForget" />

                <TextView
                    android:id="@+id/forgetpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgetpassword"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/textForget"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>